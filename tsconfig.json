{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowJs": true,
		"types": ["bun-types", "puppeteer-html-pdf"],
		"declarationMap": true,
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"declarationDir": "./dist/types"
	},
	"include": ["src/**/*.ts", "tests.ts"]
}
