{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"types": [
			"bun-types" // add Bun global
		],
		"declarationMap": true,
		"declaration": true,
		"rootDir": "./",
		"outDir": "./dist"
	}
}
